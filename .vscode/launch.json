{
    "version": "0.2.0",
    "configurations": [{
            "name": "Launch Chrome against localhost",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "diagnosticLogging": true,
            "runtimeArgs": [
                "--user-data-dir=C:/dev/",
                "--remote-debugging-port=9222" //Open in port 9222 (standard chrome debug port)
            ],
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "sourceMaps": true,
            "diagnosticLogging": true,
            "webRoot": "${workspaceRoot}"
        }
    ]
}